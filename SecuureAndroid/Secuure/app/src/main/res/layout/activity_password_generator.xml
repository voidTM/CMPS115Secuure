<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:backgroundTint="#ffffff">


    <CheckBox
        android:text="Numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/radioNum"
        android:layout_below="@+id/radioCap"
        android:layout_alignStart="@+id/radioCap" />

    <CheckBox
        android:text="Symbols ('!','#','@','$','%','^','*')"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/radioSym"
        android:layout_below="@+id/radioNum"
        android:layout_alignStart="@+id/radioNum"
        android:checked="false" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOk"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_alignBaseline="@+id/buttonCancel"
        android:layout_alignBottom="@+id/buttonCancel"
        android:layout_alignEnd="@+id/imageButtonRefresh"
        android:layout_marginEnd="31dp" />

    <CheckBox
        android:text=" Capitol Letters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioCap"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/viewPasswordGen"
        android:layout_alignEnd="@+id/buttonCancel"
        android:layout_marginEnd="24dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarLength"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Length:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBarLength"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="Password Generator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewPasswordGen"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLength"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/buttonCancel"
        android:layout_alignStart="@+id/buttonCancel" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/stat_notify_sync"
        android:id="@+id/imageButtonRefresh"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/viewPasswordGen"
        android:layout_toEndOf="@+id/viewPasswordGen" />

    <TextView
        android:text="Generated Password Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/imageButtonRefresh"
        android:layout_alignLeft="@+id/radioSym"
        android:layout_alignStart="@+id/radioSym"
        android:layout_marginTop="11dp" />

    <Button
        android:text="CANCEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCancel"
        android:textSize="16sp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/imageButtonRefresh"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginTop="25dp" />

</RelativeLayout>