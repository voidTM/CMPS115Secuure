<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:baselineAligned="false"
    android:id="@+id/relativeEditAccount">

    <TextView
        android:layout_width="wrap_content"
        android:text="Title"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

   <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Password"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:id="@+id/enterPassword"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <EditText
        android:id="@+id/enterAdditionalNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterPassword"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:text="Additional Notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterPassword"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/edit"
        android:text="Edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterAdditionalNotes"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textColor="#ffffff"
        android:background="@color/colorAccent" />

 <Button
     android:id="@+id/delete"
     android:text="Delete"
     android:layout_width="200dp"
     android:layout_height="wrap_content"
     android:layout_alignTop="@+id/edit"
     android:layout_alignParentRight="true"
     android:layout_alignParentEnd="true"
     android:textColor="#ffffff"
     android:background="@color/colorAccent" />

 <Button
     android:text="CANCEL"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/edit"
     android:layout_marginTop="20dp"
     android:id="@+id/buttonCancel"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true"
     android:layout_alignParentRight="true"
     android:layout_alignParentEnd="true"
     android:textColor="#ffffff"
     android:background="@color/colorAccent" />

 <ImageButton
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:srcCompat="@android:drawable/ic_menu_view"
     android:id="@+id/imageButtonShowPass"
     android:background="@color/common_google_signin_btn_text_dark_default"
     android:layout_alignTop="@+id/enterPassword"
     android:layout_alignParentRight="true"
     android:layout_alignParentEnd="true" />

</RelativeLayout>